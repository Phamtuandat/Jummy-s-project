<div class="login">

    <div class="container">
        <div class="section-header">
            <h3>
                Forgot Password
            </h3>
            {{#if done}}
                <p class="alert alert-success py-3">
                    An Email has already been sent to your email address. Please
                    follow the instructions below to complete
                </p>
            {{else}}
                <p>
                    Enter your email address below to receive the password reset
                    instructions.
                </p>
            {{/if}}
        </div>
        {{#unless done}}
            <div class="row">
                <div class="col-md-12 mx-auto">
                    <form action="/user/forgot" method="post">
                        <div class="forgot-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>E-mail</label>
                                    <input
                                        class="form-control"
                                        type="email"
                                        name="email"
                                        required
                                        pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                                    />

                                    <div
                                        class="col-md-12"
                                        style="padding-left: 0;"
                                    >
                                        <button
                                            class="btn"
                                            type="submit"
                                        >Submit</button>
                                    </div>
                                    {{#if message}}
                                        <div class="col-md-12">
                                            <div
                                                class="p-3 mt-3 alert alert-warning"
                                            >
                                                {{{message}}}
                                            </div>
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        {{/unless}}
    </div>
</div>